{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "Domain.json",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "processes": {
            "type": "object",
            "properties": {
                "creation": {
                    "$ref": "#/$defs/DomainCreation"
                },
                "renewal": {
                    "$ref": "#/$defs/DomainRenewal"
                },
                "transfer": {
                    "$ref": "DomainTransfer.json"
                }
            }
        },
        "authInfo": {
            "type": "object",
            "properties": {
                "pw": {
                    "type": "string"
                },
                "hash": {
                    "type": "string"
                }
            }
        },
        "ns": {
            "$ref": "#/$defs/NS"
        },
        "contacts": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/ContactReference"
            }
        },
        "dnsSEC": {
            "type": "array",
            "items": {
                "$ref": "#/$defs/DnsSec"
            }
        }
    },
    "required": [
        "name"
    ],
    "examples": [
        {
            "name": "example.com",
            "processes": {
                "creation": {
                    "period": "P2Y"
                }
            },
            "authInfo": {
                "pw": "password"
            },
            "contacts": [
                {
                    "value": "registrant-id",
                    "type": [
                        "registrant"
                    ]
                }
            ]
        },
        {
            "name": "example.com",
            "contacts": [
                {
                    "value": "registrant-id",
                    "type": [
                        "registrant"
                    ]
                }
            ],
            "authInfo": {
                "pw": "password"
            },
            "ns": {
                "hostAttr": [
                    {
                        "name": "ns1.example.net",
                        "addr": {
                            "ipv4": [
                                "1.1.1.1"
                            ],
                            "ipv6": [
                                "2001:db8::1"
                            ]
                        }
                    },
                    {
                        "name": "ns2.example.net",
                        "addr": {
                            "ipv4": [
                                "1.1.1.1"
                            ]
                        }
                    }
                ]
            }
        },
        {
            "name": "example.com",
            "contacts": [
                {
                    "value": "registrant-id",
                    "type": [
                        "registrant",
                        "admin"
                    ]
                }
            ],
            "authInfo": {
                "pw": "password"
            },
            "ns": {
                "hostObj": [
                    {
                        "name": "ns1.example.net"
                    },
                    {
                        "name": "ns2.example.net"
                    }
                ]
            }
        }
    ],
    "$defs": {
        "DomainCreation": {
            "type": "object",
            "properties": {
                "period": {
                    "type": "string",
                    "format": "duration"
                }
            }
        },
        "DomainRenewal": {
            "type": "object",
            "properties": {
                "period": {
                    "type": "string",
                    "format": "duration"
                }
            }
        },
        "NS": {
            "oneOf": [
                {
                    "$ref": "#/$defs/NSHostObj"
                },
                {
                    "$ref": "#/$defs/NSHostAttr"
                }
            ]
        },
        "ContactReference": {
            "type": "object",
            "properties": {
                "value": {
                    "type": "string"
                },
                "type": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/ContactType"
                    }
                }
            },
            "required": [
                "value",
                "type"
            ]
        },
        "DnsSec": {
            "type": "object",
            "properties": {
                "keyTag": {
                    "type": "string"
                },
                "algorithm": {
                    "type": "string"
                },
                "digestType": {
                    "type": "string"
                },
                "digest": {
                    "type": "string"
                }
            },
            "required": [
                "keyTag",
                "algorithm",
                "digestType",
                "digest"
            ]
        },
        "NSHostObj": {
            "type": "object",
            "properties": {
                "hostObj": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/HostInfoObj"
                    }
                }
            },
            "required": [
                "hostObj"
            ]
        },
        "NSHostAttr": {
            "type": "object",
            "properties": {
                "hostAttr": {
                    "type": "array",
                    "items": {
                        "$ref": "#/$defs/HostInfoAttr"
                    }
                }
            },
            "required": [
                "hostAttr"
            ]
        },
        "ContactType": {
            "type": "string",
            "enum": [
                "registrant",
                "admin",
                "tech",
                "billing"
            ]
        },
        "HostInfoObj": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                }
            },
            "required": [
                "name"
            ]
        },
        "HostInfoAttr": {
            "type": "object",
            "properties": {
                "addr": {
                    "type": "object",
                    "properties": {
                        "ipv4": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        },
                        "ipv6": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                }
            },
            "allOf": [
                {
                    "$ref": "#/$defs/HostInfoObj"
                }
            ]
        }
    }
}